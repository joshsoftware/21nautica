.col-md-12
= simple_nested_form_for(@job_card, html: { id: 'add_new_job_card', class: 'form-horizontal'},defaults: {input_html: {class: 'form-control'}}) do |f|
  .well
    .row
      .col-md-4
        = f.label :date
        = f.date_field :date, label: 'Date' ,value: Date.today
      .col-md-4
        = f.input :number , lable: 'Job card number',input_html: {:"data-validation" => "required", :"data-validation-error-msg" => "Job card Number is required."}
      .col-md-4
        = f.input :truck_id, label: 'Truck Number', collection: @trucks, include_blank: true, input_html: {:"data-validation" => "required", :"data-validation-error-msg" => "Truck Number is required."}        
    = f.simple_fields_for :job_card_details do |j|
      .row
        .col-md-4
          = j.input :repair_head_id, label: 'Repair head', collection: @repair_heads,include_blank: false, input_html: {:"data-validation" => "required", :"data-validation-error-msg" => "Repair_head is required."}
        .col-md-4
          = j.input :description, lable: "Description"
        .col-md-4
          = j.link_to_remove 'Remove', class: 'btn btn-danger'
    = f.link_to_add 'Add Details', :job_card_details, class: 'btn btn-success'
    %br
    %br
    .center
      = f.submit 'Save', class: 'btn btn-primary'