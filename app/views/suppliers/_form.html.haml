#supplierModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "basicModal", role: "dialog", tabindex: "-1"}
  .modal-dialog
    = simple_form_for @supplier, html: { class: 'form-horizontal'}, remote: true do |f|
      .modal-content
        .modal-header
          = link_to 'Ã—', 'javascript:void(0)', class: 'close', data: {dismiss: 'modal'}, aria: {labelledby: 'close'}
          - title = @supplier.new_record? ? 'Add Supplier' : 'Edit Supplier'
          %h1.modal-title
            = title

        .modal-body
          = f.input :name, input_html: { class: 'form-control' }
        .modal-footer
          = f.submit 'Save', class: 'btn btn-primary', "data-disable-with" => "Saving..."

:javascript
  $('#supplierModal').modal('show');