.margin-top
  .panel.panel-default.table-responsive.col-lg-12.no-padding
    .panel-heading.import_location
      %h3 Import Location
    .panel-body

      %ul.nav.nav-tabs{:role => "tablist"}
        %li.active{:role => "presentation"}
          %a{"aria-controls" => "import", "data-toggle" => "tab", :href => "#import", :role => "tab"} Import Location
        %li{:role => "presentation"}
          %a{"aria-controls" => "download", "data-toggle" => "tab", :href => "#download", :role => "tab"} Download

      .tab-content
        #import.tab-pane.active{:role => "tabpanel"}
          %br
          .center
            = form_tag import_location_trucks_url, multipart: true do |f|
              .row
                .col-sm-3= label_tag 'location', 'Select file'
                .col-sm-3= file_field_tag :file, class: 'form-control'
                .col-sm-3= submit_tag 'Upload', class: 'btn btn-primary'
                .col-sm-3= link_to 'Download Location', download_location_trucks_path, method: :post, class: 'btn btn-primary'
        #download.tab-pane{:role => "tabpanel"}
          %h3 Download Report for Month
          = form_tag export_location_trucks_path, :id => 'export_location_form', wrapper: 'horizontal_form' do |f|
            .well
              .row
                .col-md-3
                  = label_tag 'month', 'Month'
                .col-md-2
                  = text_field_tag 'month', '', class: 'form-control' 
              %br
              .row
                .col-md-2
                  = submit_tag 'Export', class: 'btn btn-primary', id: 'export_margin_report' 


:css
  .import_location {
    background-color: '#fa0'
  }
