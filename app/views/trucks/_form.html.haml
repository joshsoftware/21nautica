= simple_form_for @truck, html: {class: 'form-horizontal', id: 'req_invoice'}, defaults: {input_html: {class: 'form-control'}}, wrapper: :horizontal_form do |f|
  .row
    .col-md-4
      = f.input :reg_number, label: 'Truck Number'
  = f.submit 'Save', class: 'btn btn-primary', "data-disable-with" => "saving..."
  = link_to 'Cancel', trucks_path, class: 'btn btn-primary', data: {dismiss: 'modal'}
