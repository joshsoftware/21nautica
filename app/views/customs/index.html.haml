.destination_filter.pull-right
  = form_tag customs_path, method: :get do |f|  
    = label_tag 'List Destination '
    = select_tag 'destination', options_for_select( ["Kampala", "Kigali", "Lusaka", "Goma"], params[:destination] || 'Kampala' )

%table.table{id: 'customs_table'}
  %thead
    - if is_rfs_host?
      %th.shrink-name Customer / Shipper / Consignee Name
    - else
      %th.shrink-name Customer Name
    %th.bl-width BL Number
    %th Shipping Line
    %th Equipment
    %th Weight
    %th Entry Number
    %th ETA
    %th Quantity
    %th#btnAddNewRow Status
    %th.bl-width Custom Status
    %th Remarks
  %tbody
    - @imports.each do |import|
      %tr{id: import.id }
        - if is_rfs_host?
          %td= "#{import.customer.name}" + " / " + "#{import.shipper}" +" / "+ "#{import.consignee_name}"
        - else
          %td= import.customer.name
        %td= import.bl_number
        %td= import.shipping_line.try(:name)
        %td= import.equipment
        %td= (import.weight.to_f/import.quantity).round(2)
        %td= import.entry_number
        %td= import.estimate_arrival
        %td= import.quantity
        %td.updateStatus{class: "text-center"}
          .updateStatus.h5
            .status_updated_at
              = status_updated_at(import).to_date.to_formatted_s
            .status.text-capitalize
              = import.status.humanize
          %button.btn.btn-small.btn-primary{'data-import-id' => "#{import.id}", 'data-target' => '#statusModal', 'data-toggle' => 'modal', 'data-states' => import.status + ',' + import.aasm.events.join(','), 'data-bl-number' => import.bl_number} Update
        %td.customStatus{class: "text-center"}
          .h5
            .status_updated_at
              -if import.rotation_number
                .date.cp= "RN: #{import.rotation_number}"
              -if import.entry_number
                .date.obl= "EN: #{import.entry_number}"
          = link_to "Update", fetch_custom_modal_custom_path(id: import.id), :remote => true, :class => "button btn btn-small btn-primary"
        %td.remarks.h5
          = import.remarks

