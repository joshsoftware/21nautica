.destination_filter.pull-right
  = form_tag customs_path, method: :get do |f|
    = label_tag 'List Destination '
    = select_tag 'destination', options_for_select( ["Kampala", "Kigali", "Lusaka", "Goma"], params[:destination] || 'Kampala' )

%table.table{id: 'customs_table'}
  %thead
    - if is_rfs_host?
      %th.shrink-name-custom Customer / Shipper / Consignee Name
    - else
      %th.shrink-name-custom Customer Name
    %th.bl-width BL Number
    %th.shipping-line-custom Shipping Line
    %th Weight
    %th Ref
    %th ETA
    %th Qty
    %th.bl-width Custom Status
    %th.shrink-name-custom Remarks
    %th Action
  %tbody
    - @imports.each do |import|
      %tr{id: import.id }
        - if is_rfs_host?
          %td= "#{import.customer.name}" + " / " + "#{import.shipper}" +" / "+ "#{import.consignee_name}" + " / "+ "#{import.shipping_line.try(:name)}"
        - else
          %td= "#{import.customer.name}" + " / " + "#{import.shipping_line.try(:name)}"
        %td= import.bl_number
        %td= import.shipping_line.try(:name)
        - if import.quantity
          %td= (import.weight.to_f/import.quantity).round(2)
        - else
          %td= '-'
        %td= import.work_order_number
        %td= import.estimate_arrival
        %td= import.quantity
        %td.customStatus{class: "text-center"}
          .h5
            .status_updated_at
              -if import.rotation_number
                .date.cp= "RN: #{import.rotation_number}"
              -if import.entry_number
                .date.obl= "EN: #{import.entry_number}"
          = link_to "Update", fetch_custom_modal_custom_path(id: import.id), :remote => true, :class => "btn btn-sm btn-primary"
        %td.remarks.h5
          .desc
            = import.remarks.try(:last).try(:desc)
          %button.btn.btn-sm.btn-primary{'data-model-id' => "#{import.id}", 'data-model-type' => 'import', 'data-target' => '#remarkModal', 'data-toggle' => 'modal'} Add
        %td{style: "white-space: nowrap"}
          = link_to 'Edit', edit_import_path(import), class: 'btn btn-primary btn-sm'
          - if current_user.is?('Admin')
            = link_to 'Delete', import_path(import), method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: "Are you sure?"}


