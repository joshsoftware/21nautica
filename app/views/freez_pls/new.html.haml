= simple_form_for(@freez_pl, html: { id: 'add_new_freeze_pl', class: 'form-horizontal'},defaults: {input_html: {class: 'form-control'}}) do |f|
  .well
    .row
      .col-md-6
        = f.input :freez_date,label: 'Date',as: :string, input_html: { class: 'form-control date', data: {behaviour: "datepicker", :'date-autoclose'=> 'true'},:"data-validation" => "required", :"data-validation-error-msg" => "Date is required.",value: Date.today.end_of_month.strftime('%m-%Y') } 
    .row
      = f.submit 'Save', class: 'btn btn-primary'

:javascript
  $("#freez_pl_freez_date").datepicker({
    format: 'mm-yyyy',
    viewMode: 'months',
    minViewMode: 'months',
  })