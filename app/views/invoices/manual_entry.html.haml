%h3 Manual Invoice Form

= simple_form_for :invoice, url: manual_entry_invoices_path, method: :post, html: {class: 'form-horizontal' },
  wrapper: :horizontal_form,  defaults: {input_html: {class: 'form-control'}} do |f|
  .well
    .row
      .col-md-6
        = f.input :customer_id, collection: Customer.pluck(:name, :id)
    .row
      .col-md-6
        = f.input :date,  as: :string
    .row
      .col-md-6
        = f.input :number
    .row
      .col-md-6
        = f.input :bill_of_lading
    .row
      .col-md-6
        = f.input :amount, as: :string, input_html: { id: 'end_date', class: 'form-control' }

    = f.submit 'Save', class: 'btn btn-primary'

:javascript
  $('#invoice_customer_id').select2();
  $('#invoice_date').datepicker({ format: 'dd-mm-yyyy' })