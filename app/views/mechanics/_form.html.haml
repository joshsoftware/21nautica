.col-md-12
  = simple_form_for(@mechanic, html: { id: 'add_new_mechanic', class: 'form-horizontal'},defaults: {input_html: {class: 'form-control'}}) do |f|
    .well
      .row
        .col-md-6
          = f.input :name, input_html: {:"data-validation" => "required", :"data-validation-error-msg" => "Name is required."}
        .col-md-6
          = f.input :date_of_employment ,label: 'Date of joining', as: :string, input_html: { class: 'form-control date', data: {behaviour: "datepicker"}}
      .row
        .col-md-6
          = f.input :designation
        .col-md-6
          = f.input :salary

      .row
        .col-md-6
          = f.submit 'Save', class: 'btn btn-primary', id: 'expense_head_save'
          = link_to 'Back', mechanics_path, class: 'btn btn-primary'
