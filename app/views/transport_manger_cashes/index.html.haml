= link_to "Add new Transport cash", new_transport_manger_cash_path, class: 'btn btn-primary pull-right'
%br
%table.table
  %thead 
    %th #
    %th Created Date
    %th Transaction Date
    %th Truck Number
    %th File Number
    %th Destination
    %th Amount
    %th Balance
    %th Created By
    %th Actions
    
  %tbody
    -@transport_manger_cashes.each do |transport_manger_cash|
      %tr
        %td= transport_manger_cash.sr_number
        %td= transport_manger_cash.created_at.to_date.strftime('%d-%m-%Y')
        %td= transport_manger_cash.transaction_date.to_date.strftime('%d-%m-%Y') if transport_manger_cash.transaction_date
        %td= transport_manger_cash.truck.reg_number if transport_manger_cash.truck_id
        %td= transport_manger_cash.import.work_order_number if transport_manger_cash.import_id
        %td= transport_manger_cash.import.to if transport_manger_cash.import_id
        %td{class: "#{transport_manger_cash.transaction_type.eql?('Deposit')? 'green': 'red' }"}= "#{transport_manger_cash.transaction_type.eql?('Deposit')? transport_manger_cash.transaction_amount : - transport_manger_cash.transaction_amount }"
        %td{class: "#{transport_manger_cash.transaction_type.eql?('Deposit')? 'green': 'red' }"}=transport_manger_cash.available_balance
        %td= transport_manger_cash.created_by.name if transport_manger_cash.created_by_id
        %td= link_to 'Edit',edit_transport_manger_cash_path(transport_manger_cash), class: 'btn btn-primary' if !transport_manger_cash.transaction_date