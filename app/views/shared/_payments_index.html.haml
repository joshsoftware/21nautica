%table.table.table-hover.table-bordered#payment_details_table
  %h4.col-sm-4= @header
  %div.col-sm-4
    = select_tag(:filter_by_days_select, options_for_select(get_date_range(controller_name)), 
        class: "form-control")
  %tr.info
    %th Date
    %th Reference
    %th Amount (USD)
    %th Received (USD)

  %tbody#payment_search_result
    %script#payment_search_result_template{:type => "text/html"}
      %tr
        %td <%= date %>
        %td.voucher_type <%= voucher_type %>
        %td.amount <%= amount %>
        %td.received <%= received %>
#payment_details_result
  %h4
    Invoice Total:
    %span.total 0
    USD
  %h4
    Outstanding Balance:
    %span.balance 0
    USD

:javascript
  payments = #{@payments.to_json}
  if (payments != 0) {
    PaymentFilterInit();
  }
  
