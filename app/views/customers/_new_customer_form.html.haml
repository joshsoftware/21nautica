.col-md-12
= simple_form_for(@customer, html: { id: 'add_new_customer', class: 'form-horizontal'},defaults: {input_html: {class: 'form-control'}}) do |f|
  .well
    .row
      .col-md-6
        = f.input :name, input_html: {:"data-validation" => "required", :"data-validation-error-msg" => "Name is required."}
    .row
      .col-md-6
        = f.input :sales_rep_name, label: 'Manage By', collection: SALES_REP_NAMES, include_blank: false, input_html: {:"data-validation" => "required", :"data-validation-error-msg" => "Sales Representative is required."}
    .row
      .col-md-6
        = f.input :emails, as: :text, hint: 'Enter comma seperated emails. By default email will go to these email ids', label: "Default Emails"
    .row
      .col-md-6
        = f.input :account_emails, as: :text, hint: 'Enter comma seperated emails', label: "Account Emails"
    .row
      .col-md-6
        = f.input :management_emails, as: :text, hint: 'Enter comma seperated emails', label: "Management Emails"
    .row
      .col-md-6
        = f.input :operation_emails, as: :text, hint: 'Enter comma seperated emails', label: "Operation Emails"        
    .row
      .col-md-6
        = f.submit 'Save', class: 'btn btn-primary', id: 'customer_save'
        = link_to 'Back', customers_path, class: 'btn btn-primary'

