.col-md-12
= simple_form_for(@customer, html: { id: 'add_new_customer', class: 'form-horizontal'},defaults: {input_html: {class: 'form-control'}}) do |f|
  .well
    .row
      .col-md-6
        = f.input :name, input_html: {:"data-validation" => "required", :"data-validation-error-msg" => "Name is required."}
    .row
      .col-md-6
        = f.input :emails, hint: 'enter comma seperated emails'
        -# if @customer.new_record?
          = f.input :emails, hint: 'enter comma seperated emails', input_html:{:"data-validation" => "email", :"data-validation-error-msg" => "Email is not in proper format"}
        -# else
          = f.input :emails, hint: 'enter comma seperated emails', input_html: {class: 'email_validate_for_customer form-control'}

    .row
      .col-md-6
        = f.submit 'Save', class: 'btn btn-primary', id: 'customer_save'
        = link_to 'Back', customers_path, class: 'btn btn-primary'

