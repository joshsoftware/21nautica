.well
  %table.table#req_sheet
    %thead
      %tr
        %th Item
        %th Description 
        %th Mechanic 
        %th Quantity
        %th Price 
        %th Total Cost
        %th
    %tbody
      = f.simple_fields_for :req_parts, @req_sheet.req_parts , wrapper: false do |part|
        %tr.fields
          %td.spare_part_id
            = part.input :spare_part_id, label: false, wrapper: :vertical_form, input_html: { class: 'spare_part', id: 'spare_part_id', value: part.object.spare_part_id }, selected: part.object.spare_part_id
          - if @req_sheet.persisted?
            %td.description= part.input :description, wrapper: :vertical_form, label: false, readonly: true, input_html: { value: part.object.spare_part.try(:description), class: 'req_part_description' }
          - else
            %td.description= part.input :description, wrapper: :vertical_form, label: false, readonly: true, input_html: { class: 'req_part_description' }
          %td.mechanic_id= part.input :mechanic_id, collection: Mechanic.order(:name).pluck(:name, :id), wrapper: :vertical_form, label: false,
            input_html: {class: 'select2' }
          %td.quantity_req= part.input :quantity, wrapper: :vertical_form, label: false, input_html: {class: 'req_quantity'}
          %td.price_req= part.input :price, wrapper: :vertical_form, label: false, input_html: {class: 'req_price', min: "1"}
          %td.req_total_cost= part.input :total_cost, wrapper: :vertical_form, label: false, readonly: true, input_html: {class: 'total_cost'}
          %td
            = part.link_to_remove method: :delete, class: 'delete pull-left' do
              %span.glyphicon.glyphicon-remove
  = f.link_to_add 'Add', :req_parts, id: 'add_req_parts', class: 'btn btn-primary', "data-target" => '#req_sheet'

:javascript
  $(document).ready(function(){
    $('.fields #spare_part_id').each(function(index) {
      $(this).select2({
        initSelection: function(element, callback) {
          return $.get('/req_sheets/load_spare_part', { spare_part_id: element.val() }, function (data) {
            callback({ id: data.id, text: data.product_name });
          });
        },
        width: "100%",
        ajax: {
          url: '/spare_parts',
          dataType: 'json',
          data: function (params) {
            var query = {
              searchTerm: params
            }
            return query;
          },
          results: function(data, page) {
            return {
              results: $.map( data, function(part, i) {
                return { id: part.id, text: part.product_name }
              } )
            }
          }
        }
      });
    });
  });

  $(document).on('nested:fieldAdded', function(event){
    event.field.find('#spare_part_id').select2({
      width: "100%",
      ajax: {
        url: '/spare_parts',
        dataType: 'json',
        data: function (params) {
          var query = {
            searchTerm: params
          }
          return query;
        },
        results: function(data, page) {
          return {
            results: $.map( data, function(part, i) {
              return { id: part.id, text: part.product_name }
            } )
          }
        }
      }
    });
  })
